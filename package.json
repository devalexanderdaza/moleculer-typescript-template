{
  "name": "moleculer-typescript-template",
  "version": "0.1.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "dev": "run-p *:watch",
    "dev:watch": "NODE_OPTIONS=--trace-warnings ts-node-dev --watch services node_modules/.bin/moleculer-runner --env --config moleculer.config.ts",
    "start": "moleculer-runner --env --config dist/moleculer.config.js",
    "cli": "moleculer connect --env --config dist/moleculer.config.js NATS",
    "ci": "jest --watch",
    "clean": "rimraf dist",
    "test": "jest --coverage",
    "build": "tsc",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .ts,.js,.tsx,.jsx services/",
    "build:watch": "tsc -w",
    "prebuild": "npm run clean",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "generate:service": "hygen service new --name",
    "prepare": "husky install",
    "typecheck": "tsc -b"
  },
  "keywords": [
    "microservices",
    "moleculer",
    "moleculer typescript template"
  ],
  "author": "",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "0.40.0",
    "eslint-config-xo-typescript": "0.50.0",
    "husky": "7.0.4",
    "hygen": "6.2.0",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "lint-staged": "12.3.7",
    "moleculer-repl": "0.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "dotenv": "16.0.0",
    "moleculer": "0.14.19",
    "moleculer-web": "0.10.4",
    "nats": "2.6.1",
    "pino": "7.9.2",
    "pino-pretty": "7.5.4"
  },
  "engines": {
    "node": ">= 14.x.x"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "../coverage",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}
